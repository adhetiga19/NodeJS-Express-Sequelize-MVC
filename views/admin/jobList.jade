extends layout

block head
  title Job
block content
  h3(align="center") Job Table
    div(class="row")
      div(class="add-button col-md-2" align="right")
        p
          a(class="btn btn-info btn-sm" href="/job/add") Add
    table(class="table table-hover" style="width: 60%;" align="center")
      tr(class="table-primary")
        th ID
        th Job Title
        th Action
      each job in jobList
        tr
          td #{job.job_id}
          td #{job.job_title}
          td 
            a(href="/job/edit/" + job.job_id) Edit 
            a(type="text") | 
            a(href="/job/delete/" + job.job_id,
              onclick="return confirm('Are you sure?')") Delete